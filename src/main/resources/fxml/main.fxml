<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.controlsfx.control.HiddenSidesPane?>
<?import org.controlsfx.control.StatusBar?>
<?import java.lang.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:id="root" alignment="CENTER" prefHeight="500.0" prefWidth="1000.0"
      stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/9.0.1" fx:controller="ogamebot.gui.Main">
    <children>
        <MenuBar fx:id="menuBar">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Einloggen"/>
                        <MenuItem mnemonicParsing="false" text="Ã–ffnen"/>
                        <MenuItem mnemonicParsing="false" onAction="#openSettings" text="Einstellungen"/>
                        <MenuItem mnemonicParsing="false" text="Neuer Spieler"/>
                        <MenuItem mnemonicParsing="false" text="Neues Universum"/>
                        <MenuItem mnemonicParsing="false" onAction="#saveData" text="Speichern"/>
                        <MenuItem mnemonicParsing="false" text="Close"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Delete"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Data">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Formula"/>
                        <MenuItem mnemonicParsing="false" text="Delete"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <ButtonBar buttonMinWidth="20.0" nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0" prefWidth="200.0">
            <buttons>
                <Button fx:id="addPlanetBtn" contentDisplay="CENTER" mnemonicParsing="false" onAction="#addPlanet"
                        prefHeight="30.0" prefWidth="30.0"/>
                <Button fx:id="addPlayerBtn" contentDisplay="CENTER" layoutX="645.0" layoutY="10.0"
                        mnemonicParsing="false" onAction="#addPlayer" prefHeight="30.0" prefWidth="30.0"/>
                <Button fx:id="addUniverseBtn" contentDisplay="CENTER" layoutX="645.0" layoutY="10.0"
                        mnemonicParsing="false" onAction="#addUniverse" prefHeight="30.0" prefWidth="30.0"/>
            </buttons>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </ButtonBar>
        <HBox alignment="CENTER_LEFT" spacing="5.0">
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </VBox.margin>
            <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Universum:">
                    <styleClass>
                        <String fx:value="text"/>
                        <String fx:value="titles"/>
                    </styleClass>
                </Text>
                <Text fx:id="universeName" strokeType="OUTSIDE" strokeWidth="0.0">
                    <styleClass>
                        <String fx:value="text"/>
                        <String fx:value="titles"/>
                    </styleClass>
                </Text>
                <Region HBox.hgrow="ALWAYS"/>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Spieler:">
                    <styleClass>
                        <String fx:value="text"/>
                        <String fx:value="titles"/>
                    </styleClass>
                </Text>
                <Text fx:id="playerName" strokeType="OUTSIDE" strokeWidth="0.0">
                    <styleClass>
                        <String fx:value="text"/>
                        <String fx:value="titles"/>
                    </styleClass>
                </Text>
                <Region layoutX="119.0" layoutY="10.0" HBox.hgrow="ALWAYS"/>
                <Text layoutX="194.0" layoutY="32.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Punkte:">
                    <styleClass>
                        <String fx:value="text"/>
                        <String fx:value="titles"/>
                    </styleClass>
                </Text>
                <Text fx:id="pointsValue" layoutX="264.0" layoutY="32.0" strokeType="OUTSIDE" strokeWidth="0.0">
                    <styleClass>
                        <String fx:value="text"/>
                        <String fx:value="titles"/>
                    </styleClass>
                </Text>
            </children>
        </HBox>
        <HiddenSidesPane fx:id="hiddenUniTree" triggerDistance="50">
            <content>
                <HBox VBox.vgrow="ALWAYS">
                    <children>
                        <ListView id="planet-List" fx:id="celestialBodyList" prefWidth="200.0" HBox.hgrow="NEVER"/>
                        <TabPane fx:id="playerContent" tabClosingPolicy="UNAVAILABLE" HBox.hgrow="ALWAYS"/>
                    </children>
                </HBox>
            </content>
            <left>
                <TreeView fx:id="uniPlayerTree" maxWidth="400.0" minWidth="50.0" prefHeight="399.0" prefWidth="208.0"
                          showRoot="false" HBox.hgrow="SOMETIMES"/>
            </left>
        </HiddenSidesPane>
        <StatusBar styleClass="status-bar"/>
    </children>
</VBox>
